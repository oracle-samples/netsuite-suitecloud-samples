					},
					"creditlimit": {
						"type": "number",
						"description": "Customer's credit limit"
					},
					"subsidiary": {
						"type": "string",
						"description": "The subsidiary ID"
					},
					"isperson": {
						"type": "string",
						"description": "States whether or not this customer is a person('T') or a company ('F')"
					}
				},
				"required": ["isperson", "subsidiary"]
